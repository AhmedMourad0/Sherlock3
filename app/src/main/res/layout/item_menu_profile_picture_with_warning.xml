<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/menu_profile_picture_image"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:contentDescription="@string/profile_picture"
		android:scaleType="centerCrop"
		android:src="@drawable/placeholder"
		app:civ_border_color="@android:color/white"
		android:elevation="4dp"
		app:civ_border_width="0dp"
		android:layout_marginTop="@dimen/menuItemVerticalPadding"
		android:layout_marginBottom="@dimen/menuItemVerticalPadding"
		android:layout_marginEnd="@dimen/menuItemEndPadding"
		android:layout_marginStart="@dimen/menuItemStartPadding"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<ImageView
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:src="@drawable/ic_warning"
		android:elevation="4dp"
		android:layout_marginBottom="7dp"
		android:layout_marginEnd="4dp"
		android:layout_marginStart="@dimen/menuItemStartPadding"
		android:contentDescription="@string/warning"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
